<beans xmlns:jms="jms://servicemix.apache.org/jms/1.0"
       xmlns:sac="http://touk.pl/serviceAccepter"
    >

  <bean id="connectionFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
    <property name="jndiName" value="java:/jms/connectionFactory" />
  </bean>

  <jms:provider service="sac:ServiceAccepter" endpoint="jms"
		destinationName="serviceAccepter" connectionFactory="#connectionFactory" />

  <jms:consumer service="sac:ServiceAccepterResponse" endpoint="jms"
		targetService="sac:ServiceAccepterResponse" targetEndpoint="ServiceAccepterResponse"
		destinationName="serviceAccepterResponse"
		connectionFactory="#connectionFactory"
	/>
</beans>
